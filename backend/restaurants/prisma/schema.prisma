generator client {
  provider = "prisma-client-js"
  binaryTargets = "linux-musl-arm64-openssl-3.0.x"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id      Int    @id @default(autoincrement())
  name    String
  address String // Address has format: Via dei tal dei tali, 95, Rome, Italy

  // addressId Int
  @@unique([name, address])
}

